<%= form_with model: @book do |form| %>
  
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
    <% @book.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :author %>
      <%= form.select :author_id, Author.all.pluck(:name, :id), {prompt:'select'}, {class: "form-control"} %>
      <%# <%= form.select :author_id, Author.all.collect { |idz| [idz.name, idz.id] }, { required: true } %>
      <% @book.errors.full_messages_for(:name).each do |message| %>
        <div><%= message %></div>
      <% end %>
  <div>

  <div>
    <%= form.label :price %>
    <%= form.text_field :price %>
    <% @book.errors.full_messages_for(:price).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :prints %>
    <%= form.text_field :prints %>
    <% @book.errors.full_messages_for(:price).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>

<% end %>